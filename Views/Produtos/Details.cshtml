@model BDApplication.ViewModel.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h2>Detalhes "@Model.Descr"</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodProd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodProd)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descr)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidades)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descontinuado)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Descontinuado == 1)
            {
                <span>Sim</span>
            }
            else
            {
                <span>Não</span>
            }

        </dd>
   
        <dt class="col-sm-2">
            Fornecedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.For) (ID: @Html.DisplayFor(model => model.CodFor))
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria) (ID: @Html.DisplayFor(model => model.CodCategoria))
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.CodProd }) |
    <a asp-action="Index">Voltar</a>
</div>
