@model BDApplication.ViewModel.ProdutoViewModel

@{
    ViewData["Title"] = "Deletar Produto";
}


<h3>Certeza que deseja excluir o produto "@Model.Descr"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodProd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodProd)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descr)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidades)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descontinuado)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Descontinuado == 1)
            {
                <span>Sim</span>
            }
            else
            {
                <span>Não</span>
            }

        </dd>

        <dt class="col-sm-2">
            Fornecedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.For) (ID: @Html.DisplayFor(model => model.CodFor))
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria) (ID: @Html.DisplayFor(model => model.CodCategoria))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
