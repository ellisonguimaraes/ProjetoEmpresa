@model BDApplication.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<h3>Certeza que deseja excluir a categoria "@Model.Descr"?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodCategoria)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descr)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
