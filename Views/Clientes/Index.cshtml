@model BDApplication.ViewModel.SearchClienteViewModel

@{
    ViewData["Title"] = "Clientes";
}

<div class="container p-4">
    <div class="row">
        <div class="col"><h2>Clientes</h2></div>

        <div class="col">
            <nav class="navbar navbar-light">
                <form class="form-inline" asp-action="Index">
                    <input asp-for="Search" class="form-control mr-sm-2" type="search" placeholder="Nome cliente" aria-label="Search">
                    <span asp-validation-for="Search" class="text-danger"></span>
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Buscar</button>
                </form>
            </nav>
        </div>

        <div class="col">
            <p style="text-align:right;">
                <a class="btn btn-outline-success" asp-action="Create">Novo Cliente</a>
            </p>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr class="row">
            <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                CodCli
            </th>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                Nome
            </th>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                Contato
            </th>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                Endereço
            </th>
            <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                Telefone
            </th>
            <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                Fax
            </th>
            <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Clientes) {
            <tr class="row">
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.CodCli)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Contato)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Endereco) (@Html.DisplayFor(modelItem => item.Cidade) - @Html.DisplayFor(modelItem => item.Pais))
                </td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
                    <a class="p-2 mb-2 bg-info text-white" asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.CodCli">Editar</a>
                    <a class="p-2 mb-2 bg-warning text-dark" asp-controller="Clientes" asp-action="Details" asp-route-id="@item.CodCli">Ver Mais</a>
                    <a class="p-2 mb-2 bg-danger text-white" asp-controller="Clientes" asp-action="Delete" asp-route-id="@item.CodCli">Excluir</a>
                </td>
            </tr>
    }
    </tbody>
</table>
