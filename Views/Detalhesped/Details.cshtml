@model BDApplication.ViewModel.DetalhesPedViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumPed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPed)
        </dd>
        <dt class = "col-sm-2">
            Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prod) (ID: @Html.DisplayFor(model => model.CodProd))
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            R$ @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Qtde)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desconto)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { NumPed = Model.NumPed, CodProd = Model.CodProd }) |
    <a asp-action="Index">Voltar</a>
</div>
