@model BDApplication.ViewModel.DetalhesPedViewModel

@{
    ViewData["Title"] = "Novo DetalhesPed";
}

<h2>Novo DetalhesPed</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumPed" class="control-label"></label>
                <select asp-for="NumPed" class="form-control">
                    @foreach (var item in Model.Pedidos)
                    {
                        <option value="@item.NumPed">@item.NumPed</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CodProd" class="control-label"></label>
                <select asp-for="CodProd" class="form-control">
                    @foreach (var item in Model.Produtos)
                    {
                        <option value="@item.CodProd">@item.Descr</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label">Preço</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label">Quantidade</label>
                <input asp-for="Qtde" class="form-control" />
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desconto" class="control-label"></label>
                <input asp-for="Desconto" class="form-control" />
                <span asp-validation-for="Desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
