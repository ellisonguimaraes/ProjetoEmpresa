@model BDApplication.ViewModel.PedidoViewModel

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>Editar Pedido</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumPed" class="control-label"></label>
                <input asp-for="NumPed" class="form-control" readonly="readonly" />
                <span asp-validation-for="NumPed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodCli" class="control-label"></label>
                <select asp-for="CodCli" class="form-control">
                    @foreach (var item in Model.ClientesList)
                    {
                        <option value="@item.CodCli">@item.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CodFun" class="control-label"></label>
                <select asp-for="CodFun" class="form-control">
                    @foreach (var item in Model.FuncionariosList)
                    {
                        <option value="@item.CodFun">@item.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DataPed" class="control-label">Data Pedido</label>
                <input asp-for="DataPed" class="form-control" />
                <span asp-validation-for="DataPed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label">Data Entrega</label>
                <input asp-for="DataEntrega" class="form-control" />
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Frete" class="control-label">Valor do frete</label>
                <input asp-for="Frete" class="form-control" />
                <span asp-validation-for="Frete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
