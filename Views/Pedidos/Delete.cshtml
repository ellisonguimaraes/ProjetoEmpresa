@model BDApplication.ViewModel.PedidoViewModel

@{
    ViewData["Title"] = "Deletar Pedido";
}

<h3>Certeza que deseja excluir o pedido nº "@Model.NumPed"?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumPed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumPed)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cli) (ID: @Html.DisplayFor(model => model.CodCli))
        </dd>
        <dt class="col-sm-2">
            Funcionário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fun) (ID: @Html.DisplayFor(model => model.CodFun))
        </dd>
        <dt class="col-sm-2">
            Data Pedido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPed)
        </dd>
        <dt class="col-sm-2">
            Data Entrega
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class="col-sm-2">
            Valor do frete
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Frete)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
